@model vizehaber.Models.Contact

@{
    ViewData["Title"] = "Mesaj Detayı";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container">
    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex justify-content-between align-items-center">
            <h6 class="m-0 font-weight-bold text-primary">Konu: @Model.Subject</h6>
            <span class="badge badge-secondary">@Model.CreatedDate.ToString("dd MMMM yyyy HH:mm")</span>
        </div>
        <div class="card-body">

            <div class="row mb-3">
                <div class="col-md-2 font-weight-bold">Gönderen:</div>
                <div class="col-md-10">
                    @Model.Name
                    <a href="mailto:@Model.Email" class="btn btn-light btn-sm ml-2">
                        <i class="fas fa-envelope"></i> @Model.Email
                    </a>
                </div>
            </div>

            <hr>

            <div class="p-3 bg-light rounded text-dark border">
                @Model.Message
            </div>

            @if (!string.IsNullOrEmpty(Model.PhotoUrl))
            {
                <hr>
                <p class="font-weight-bold">Eklenen Fotoğraf:</p>
                <div class="text-center">
                    <img src="@Model.PhotoUrl" class="img-fluid rounded shadow-sm" style="max-height: 500px;">
                </div>
            }

            <hr>

            <div class="d-flex justify-content-between">
                <a asp-action="Messages" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Geri Dön
                </a>

                <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger"
                   onclick="return confirm('Bu mesajı silmek istediğinize emin misiniz?')">
                    <i class="fas fa-trash"></i> Mesajı Sil
                </a>
            </div>

        </div>
    </div>
</div>