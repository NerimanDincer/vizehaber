@model IList<vizehaber.Models.AppUser>

@{
    ViewData["Title"] = "Yazar Yönetimi";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="card shadow mb-4">
    <div class="card-header py-3 d-flex justify-content-between align-items-center">
        <h6 class="m-0 font-weight-bold text-primary">✍️ Yazar Kadrosu</h6>
        <span class="badge badge-success">Toplam: @Model.Count Yazar</span>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered table-hover" id="dataTable" width="100%" cellspacing="0">
                <thead class="thead-light">
                    <tr>
                        <th style="width: 80px;">Fotoğraf</th>
                        <th>Ad Soyad</th>
                        <th>Email</th>
                        <th>Unvan / Uzmanlık</th>
                        <th class="text-center">Durum</th>
                        <th class="text-center">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        bool isSuspended = user.LockoutEnd != null && user.LockoutEnd > DateTime.Now;

                        <tr style="@(isSuspended ? "background-color: #ffebee;" : "")">

                            <td class="text-center" style="vertical-align: middle;">
                                <div style="position: relative; display: inline-block;">
                                    <img src="@(user.PhotoUrl ?? "/sbadmin/img/undraw_profile.svg")"
                                         class="rounded-circle shadow-sm" width="50" height="50" style="object-fit: cover;">

                                    <span style="position: absolute; bottom: 0; right: 0; width: 12px; height: 12px; border-radius: 50%; border: 2px solid white; background-color: @(isSuspended ? "red" : "#1cc88a");"></span>
                                </div>
                            </td>

                            <td style="vertical-align: middle;">
                                <span class="font-weight-bold text-dark">@user.FullName</span>
                            </td>

                            <td style="vertical-align: middle;">@user.Email</td>

                            <td style="vertical-align: middle;">
                                @if (!string.IsNullOrEmpty(user.Specialization))
                                {
                                    <span class="badge badge-info px-2 py-1" style="font-size: 0.85rem;">@user.Specialization</span>
                                }
                                else
                                {
                                    <span class="text-muted small">- Belirtilmemiş -</span>
                                }
                            </td>

                            <td style="vertical-align: middle; text-align: center;">
                                @if (isSuspended)
                                {
                                    <span class="badge badge-danger px-2 py-1">⛔ Askıda</span>
                                    <div class="small text-danger mt-1">(@user.LockoutEnd?.ToString("dd.MM"))</div>
                                }
                                else
                                {
                                    <span class="badge badge-success px-2 py-1">✅ Aktif</span>
                                }
                            </td>

                            <td style="width: 160px; text-align: center; vertical-align: middle;">
                                <div class="btn-group btn-group-sm" role="group">

                                    <a asp-action="EditUser" asp-route-id="@user.Id" class="btn btn-primary" title="Düzenle">
                                        <i class="fas fa-edit"></i>
                                    </a>

                                    @if (isSuspended)
                                    {
                                        <a asp-action="ToggleBan" asp-route-id="@user.Id" class="btn btn-success"
                                           onclick="return confirm('Engeli kaldırmak istiyor musunuz?');" title="Engeli Kaldır">
                                            <i class="fas fa-unlock"></i>
                                        </a>
                                    }
                                    else
                                    {
                                        <a asp-action="ToggleBan" asp-route-id="@user.Id" class="btn btn-warning"
                                           onclick="return confirm('30 günlüğüne askıya alınsın mı?');" title="Askıya Al">
                                            <i class="fas fa-ban"></i>
                                        </a>
                                    }

                                    <a asp-action="DeleteUser" asp-route-id="@user.Id" class="btn btn-danger"
                                       onclick="return confirm('Kullanıcı tamamen silinecek! Emin misiniz?');" title="Sil">
                                        <i class="fas fa-trash"></i>
                                    </a>

                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            @if (Model.Count == 0)
            {
                <div class="alert alert-warning text-center mt-3">
                    Listelenecek yazar bulunamadı.
                </div>
            }
        </div>
    </div>
</div>