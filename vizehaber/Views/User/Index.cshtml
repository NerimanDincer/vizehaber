@model List<vizehaber.Models.User>

@{
    ViewData["Title"] = "Kullanıcı Listesi";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Kayıtlı Kullanıcılar</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered table-hover" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Fotoğraf</th>
                        <th>Ad Soyad</th>
                        <th>Kullanıcı Adı</th>
                        <th>E-posta</th>
                        <th>Rol</th>
                        <th>Kayıt Tarihi</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="text-center">
                                <img src="@(item.PhotoPath ?? "/sbadmin/img/undraw_profile.svg")"
                                     class="rounded-circle" width="50" height="50" style="object-fit:cover;">
                            </td>
                            <td>@item.FullName</td>
                            <td>@item.UserName</td>
                            <td>@item.Email</td>
                            <td>
                                @if (item.Role == "Admin")
                                {
                                    <span class="badge badge-danger">Yönetici</span>
                                }
                                else if (item.Role == "Writer")
                                {
                                    <span class="badge badge-success">Yazar</span>
                                }
                                else
                                {
                                    <span class="badge badge-secondary">Okuyucu</span>
                                }
                            </td>
                            <td>@item.CreatedDate.ToString("dd.MM.yyyy")</td>
                            <td>
                                @if (User.Identity.Name != item.UserName)
                                {
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm"
                                       onclick="return confirm('@item.FullName kullanıcısını silmek istediğinize emin misiniz?')">
                                        <i class="fas fa-trash"></i> Sil
                                    </a>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
