@model List<vizehaber.ViewModels.UserRoleViewModel>

@{
    ViewData["Title"] = "Kullanıcı Yönetimi";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="card shadow mb-4">
    <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">

        <div>
            <h6 class="m-0 font-weight-bold text-primary">👥 Kullanıcı Listesi</h6>
            <span class="small text-muted">Toplam: @Model.Count Kullanıcı</span>
        </div>

        <form method="get" asp-action="Index" class="form-inline">
            <div class="input-group input-group-sm">

                <input type="text" name="search" class="form-control small"
                       style="background-color: #eaecf4; border: 1px solid #d1d3e2; color: #6e707e; width: 300px;"
                       placeholder="İsim, mail veya kullanıcı adı..."
                       value="@ViewData["SearchTerm"]" aria-label="Search">

                <div class="input-group-append">
                    <button class="btn btn-primary" type="submit">
                        <i class="fas fa-search fa-sm"></i>
                    </button>
                </div>

                @if (ViewData["SearchTerm"] != null)
                {
                    <div class="input-group-append ml-1">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-times"></i>
                        </a>
                    </div>
                }

            </div>
        </form>

    </div>


    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Kullanıcı</th>
                        <th>Email</th>
                        <th>Rol (Yetki)</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.FullName</td>
                            <td>@item.Email</td>
                            <td>
                                @if (item.SelectedRole == "Admin")
                                {
                                    <span class="badge badge-danger">Yönetici</span>
                                }
                                else if (item.SelectedRole == "Writer")
                                {
                                    <span class="badge badge-success">Yazar</span>
                                }
                                else
                                {
                                    <span class="badge badge-secondary">Okuyucu</span>
                                }
                            </td>
                            <td>
                                @if (User.Identity.Name != item.Email)
                                {
                                    <a asp-action="EditUser" asp-route-id="@item.Id" class="btn btn-warning btn-sm">
                                        <i class="fas fa-edit"></i> Yetki Ver
                                    </a>

                                    <a asp-action="ToggleUserStatus" asp-route-id="@item.Id" class="btn btn-info btn-sm">
                                        <i class="fas fa-lock"></i> Durum
                                    </a>

                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm"
                                       onclick="return confirm('Silmek istediğine emin misin?')">
                                        <i class="fas fa-trash"></i> Sil
                                    </a>
                                }
                                else
                                {
                                    <span class="badge badge-light">Siz</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>