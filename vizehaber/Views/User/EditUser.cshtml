@model vizehaber.Models.User
@{
    ViewData["Title"] = "Kullanıcı Düzenle"; Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Kullanıcı Yetkilendirme: @Model.FullName</h6>
            </div>
            <div class="card-body">
                <form asp-action="EditUser" method="post">
                    <input type="hidden" asp-for="Id" />

                    <div class="form-group">
                        <label>Ad Soyad</label>
                        <input asp-for="FullName" class="form-control" readonly />
                    </div>
                    <div class="form-group">
                        <label>E-Posta</label>
                        <input asp-for="Email" class="form-control" readonly />
                    </div>

                    <hr>

                    <div class="form-group">
                        <label class="font-weight-bold text-danger">Kullanıcı Rolü (Yetkisi)</label>
                        <select asp-for="Role" class="form-control">
                            <option value="User">User (Standart Okuyucu)</option>
                            <option value="Writer">Writer (Haber Yazarı)</option>
                            <option value="Admin">Admin (Tam Yetkili)</option>
                        </select>
                        <small class="form-text text-muted">Dikkat: Admin yetkisi tüm sisteme erişim sağlar.</small>
                    </div>

                    <div class="form-group form-check">
                        <input class="form-check-input" asp-for="IsActive" />
                        <label class="form-check-label">Hesap Aktif mi?</label>
                    </div>

                    <button type="submit" class="btn btn-primary btn-block">Değişiklikleri Kaydet</button>
                    <a asp-action="Index" class="btn btn-secondary btn-block">İptal</a>
                </form>
            </div>
        </div>
    </div>
</div>