@model vizehaber.ViewModels.UserRoleViewModel

@{
    ViewData["Title"] = "Kullanıcı Düzenle";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Kullanıcı Yetkilendirme</h6>
    </div>
    <div class="card-body">

        <form asp-action="EditUser" method="post">
            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label>Ad Soyad (Değiştirilemez)</label>
                <input asp-for="FullName" class="form-control" readonly />
            </div>

            <div class="form-group">
                <label>E-Posta (Değiştirilemez)</label>
                <input asp-for="Email" class="form-control" readonly />
            </div>

            <div class="form-group">
                <label class="font-weight-bold text-danger">Yeni Yetki (Rol)</label>
                <select asp-for="SelectedRole" class="form-control">

                    @if (ViewBag.Roles != null)
                    {
                        foreach (var role in ViewBag.Roles)
                        {
                            <option value="@role">@role</option>
                        }
                    }

                </select>
                <small class="text-muted">
                    <b>Admin:</b> Tam yetki. <br>
                    <b>Writer:</b> Haber ekleyebilir. <br>
                    <b>User:</b> Sadece okuyabilir ve yorum yapabilir.
                </small>
            </div>
            <div class="form-group">
                <label>Uzmanlık Alanı / Unvan</label>
                <input asp-for="Specialization" class="form-control" placeholder="Örn: Ekonomi Yazarı, Spor Editörü..." />
            </div>

            <button type="submit" class="btn btn-primary btn-block">Yetkiyi Güncelle</button>
        </form>

        <div class="mt-3 text-center">
            <a asp-action="Index" class="btn btn-secondary btn-sm">Listeye Dön</a>
        </div>

    </div>
</div>