@model vizehaber.Models.AppUser

@{
    ViewData["Title"] = Model.FullName;
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container">

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Yazar Profili</h6>
        </div>
        <div class="card-body">
            <div class="row align-items-center">

                <div class="col-md-4 text-center">
                    <img src="@(Model.PhotoUrl ?? "/sbadmin/img/undraw_profile.svg")"
                         class="img-fluid rounded-circle shadow-lg"
                         style="width: 250px; height: 250px; object-fit: cover; border: 5px solid #f8f9fc;">

                    <h3 class="mt-3 font-weight-bold text-gray-900">@Model.FullName</h3>
@*                     <span class="badge badge-success px-3 py-2">@Model.Role</span>*@
                    <div class="mt-3">
                        <a href="mailto:@Model.Email" class="btn btn-primary btn-icon-split btn-sm">
                            <span class="icon text-white-50"><i class="fas fa-envelope"></i></span>
                            <span class="text">@Model.Email</span>
                        </a>
                    </div>
                </div>

                <div class="col-md-8">
                    <h4 class="small font-weight-bold">Biyografi</h4>
                    <div class="p-4 bg-gray-100 rounded text-dark" style="font-size: 1.1rem; line-height: 1.8;">
                        @(string.IsNullOrEmpty(Model.Biography) ? "Bu yazar henüz biyografi eklememiş." : Model.Biography)
                    </div>

                    <div class="row mt-4">
                        <div class="col-md-6">
                            <div class="card border-left-info shadow h-100 py-2">
                                <div class="card-body">
                                    <div class="text-xs font-weight-bold text-info text-uppercase mb-1">Kayıt Tarihi</div>
                                    <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.CreatedDate.ToString("dd MMMM yyyy")</div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="card border-left-warning shadow h-100 py-2">
                                <div class="card-body">
                                    <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">Toplam Yazı</div>
                                    <div class="h5 mb-0 font-weight-bold text-gray-800">@(Model.News?.Count ?? 0)</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>

    @if (Model.News != null && Model.News.Any())
    {
        <h4 class="mb-3 text-gray-800">Bu Yazarın Haberleri</h4>
        <div class="row">
            @foreach (var news in Model.News)
            {
                <div class="col-md-4 mb-4">
                    <div class="card shadow h-100">
                        @if (!string.IsNullOrEmpty(news.ImagePath))
                        {
                            <img src="@news.ImagePath" class="card-img-top" style="height: 150px; object-fit: cover;">
                        }
                        <div class="card-body">
                            <h6 class="font-weight-bold">
                                <a asp-controller="News" asp-action="Details" asp-route-id="@news.Id" class="text-dark">@news.Title</a>
                            </h6>
                            <small class="text-muted">@news.PublishedDate.ToString("dd.MM.yyyy")</small>
                        </div>
                    </div>
                </div>
            }
        </div>
    }

    <div class="mt-3 mb-5">
        <a asp-action="Authors" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Yazarlar Listesine Dön
        </a>
    </div>

</div>