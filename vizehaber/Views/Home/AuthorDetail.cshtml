@model vizehaber.Models.AppUser

@{
    ViewData["Title"] = Model.FullName;
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container">

    <div class="card shadow">
        <div class="card-body">

            <div class="row">

                <div class="col-lg-4 text-center border-right-lg" style="border-right: 1px solid #eee;">

                    <div class="d-flex justify-content-center mb-3">
                        <img src="@(Model.PhotoUrl ?? "/sbadmin/img/undraw_profile.svg")"
                             class="rounded-circle shadow-sm"
                             width="150" height="150"
                             style="object-fit: cover; border: 4px solid #fff;" alt="">
                    </div>

                    <h3 class="font-weight-bold text-dark mb-1">@Model.FullName</h3>

                    <div class="mb-3">
                        <span class="badge badge-light text-lowercase px-3 py-1 border">
                            <i class="fas fa-envelope mr-1"></i> @Model.Email
                        </span>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.Specialization))
                    {
                        <div class="mb-4">
                            <span class="badge badge-info px-4 py-2 shadow-sm" style="font-size: 1rem; border-radius: 20px;">
                                <i class="fas fa-pen-nib mr-2"></i> @Model.Specialization.ToUpper()
                            </span>
                        </div>
                    }
                    else
                    {
                        <div class="mb-4">
                            <span class="badge badge-secondary px-3 py-2" style="border-radius: 20px;">Yazar</span>
                        </div>
                    }

                </div>

                <div class="col-lg-8 pl-lg-5">

                    <h5 class="heading-small text-muted mb-3 mt-3 mt-lg-0">
                        <i class="fas fa-book-open mr-2"></i> Biyografi
                    </h5>

                    <div class="p-4 rounded mb-4" style="background-color: #f8f9fc; border-left: 4px solid #4e73df;">
                        @if (!string.IsNullOrEmpty(Model.Biography))
                        {
                            <p class="mb-0 text-dark" style="line-height: 1.8;">
                                @Model.Biography
                            </p>
                        }
                        else
                        {
                            <p class="text-muted font-italic mb-0">Bu yazar henüz biyografi eklememiş.</p>
                        }
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <div class="card border-left-info shadow h-100 py-2">
                                <div class="card-body">
                                    <div class="row no-gutters align-items-center">
                                        <div class="col mr-2">
                                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">Kayıt Tarihi</div>
                                            <div class="h5 mb-0 font-weight-bold text-gray-800">
                                                @Model.CreatedDate.ToString("dd MMMM yyyy")
                                            </div>
                                        </div>
                                        <div class="col-auto">
                                            <i class="fas fa-calendar fa-2x text-gray-300"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6 mb-3">
                            <div class="card border-left-warning shadow h-100 py-2">
                                <div class="card-body">
                                    <div class="row no-gutters align-items-center">
                                        <div class="col mr-2">
                                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">Toplam Yazı</div>
                                            <div class="h5 mb-0 font-weight-bold text-gray-800">
                                                0
                                            </div>
                                        </div>
                                        <div class="col-auto">
                                            <i class="fas fa-newspaper fa-2x text-gray-300"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>

    @if (Model.News != null && Model.News.Any())
    {
        <h4 class="mb-3 text-gray-800">Bu Yazarın Haberleri</h4>
        <div class="row">
            @foreach (var news in Model.News)
            {
                <div class="col-md-4 mb-4">
                    <div class="card shadow h-100">
                        @if (!string.IsNullOrEmpty(news.ImagePath))
                        {
                            <img src="@news.ImagePath" class="card-img-top" style="height: 150px; object-fit: cover;">
                        }
                        <div class="card-body">
                            <h6 class="font-weight-bold">
                                <a asp-controller="News" asp-action="Details" asp-route-id="@news.Id" class="text-dark">@news.Title</a>
                            </h6>
                            <small class="text-muted">@news.PublishedDate.ToString("dd.MM.yyyy")</small>
                        </div>
                    </div>
                </div>
            }
        </div>
    }

    <div class="mt-3 mb-5">
        <a asp-action="Authors" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Yazarlar Listesine Dön
        </a>
    </div>

</div>