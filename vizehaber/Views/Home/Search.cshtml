@model List<vizehaber.Models.News>

@{
    ViewData["Title"] = "Arama Sonuçları";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container my-5">

    <div class="row mb-4">
        <div class="col-12">
            <h3 class="font-weight-bold text-gray-800">
                🔎 "@ViewData["Query"]" için arama sonuçları
            </h3>
            <p class="text-muted">Toplam @Model.Count haber bulundu.</p>
        </div>
    </div>

    <div class="row">
        @if (Model.Count > 0)
        {
            @foreach (var item in Model)
            {
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card shadow h-100 border-0 hover-effect">
                        <img src="@item.ImagePath" class="card-img-top" alt="@item.Title" style="height: 200px; object-fit: cover;">
                        <div class="card-body">
                            <div class="mb-2">
                                <span class="badge badge-primary">@item.Category.Name</span>
                                <small class="text-muted ml-2"><i class="far fa-clock"></i> @item.PublishedDate.ToString("dd.MM")</small>
                            </div>
                            <h5 class="card-title font-weight-bold">
                                <a asp-action="Details" asp-controller="News" asp-route-id="@item.Id" class="text-dark text-decoration-none">
                                    @item.Title
                                </a>
                            </h5>
                            <p class="card-text text-muted small">
                                @if (item.Content.Length > 100)
                                {
                                    @Html.Raw(item.Content.Substring(0, 100) + "...")
                                }
                                else
                                {
                                    @Html.Raw(item.Content)
                                }
                            </p>
                        </div>
                        <div class="card-footer bg-white border-0">
                            <a asp-action="Details" asp-controller="News" asp-route-id="@item.Id" class="btn btn-outline-primary btn-sm btn-block">Devamını Oku</a>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12 text-center py-5">
                <i class="fas fa-search fa-3x text-gray-300 mb-3"></i>
                <h4>Maalesef sonuç bulunamadı.</h4>
                <p>Farklı anahtar kelimelerle tekrar deneyebilirsiniz.</p>
                <a asp-action="Index" class="btn btn-primary mt-3">Anasayfaya Dön</a>
            </div>
        }
    </div>
</div>