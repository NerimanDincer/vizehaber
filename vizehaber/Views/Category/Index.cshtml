@model List<vizehaber.ViewModels.CategoryModel>
@{
    ViewData["Title"] = "Kategoriler";
    Layout = "_LayoutAdmin";
}

@section CardHeader{
    <span>Kategoriler</span>
}

<a asp-action="Add" asp-controller="Category" class="btn btn-success mb-3">Yeni Kategori Ekle</a>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Adı</th>
            <th>Durumu</th>
            <th>Eklenme</th>
            <th>Güncellenme</th>
            <th>Düzenle - Sil</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>
                    @if (item.IsActive)
                    {
                        <span class="badge bg-danger text-white">Aktif</span>
                    }
                    else
                    {
                        <span class="badge bg-danger text-white">Pasif</span>
                    }
                </td>
                <td>@item.Created</td>
                <td>@item.Updated</td>
                <td>
                    <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Düzenle</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>



