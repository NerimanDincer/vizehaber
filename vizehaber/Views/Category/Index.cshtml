@model List<vizehaber.Models.Category>
@{
    ViewData["Title"] = "Kategoriler";
    // Eğer _LayoutAdmin dosyan yoksa burayı _Layout yapmalısın:
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@section CardHeader {
    <span>Kategoriler</span>
}

<a asp-action="Add" asp-controller="Category" class="btn btn-success mb-3">Yeni Kategori Ekle</a>

<div class="card shadow mb-4">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered table-striped" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Adı</th>
                        <th>Durumu</th>
                        <th>Eklenme</th>
                        <th>Güncellenme</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Name</td>
                            <td>
                                @if (item.IsActive)
                                {
                                    <span class="badge badge-success">Aktif</span>
                                }
                                else
                                {
                                    <span class="badge badge-danger">Pasif</span>
                                }
                            </td>

                            <td>@item.CreatedDate.ToString("dd.MM.yyyy HH:mm")</td>
                            <td>@item.UpdatedDate.ToString("dd.MM.yyyy HH:mm")</td>

                            <td>
                                <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-primary btn-sm">
                                    <i class="fas fa-edit"></i> Düzenle
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">
                                    <i class="fas fa-trash"></i> Sil
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            @if (Model.Count == 0)
            {
                <div class="alert alert-warning">Henüz hiç kategori eklenmemiş.</div>
            }
        </div>
    </div>
</div>