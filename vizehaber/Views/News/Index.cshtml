@model IEnumerable<vizehaber.Models.News>

@{
    ViewData["Title"] = "Haber Listesi";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="card shadow mb-4">
    <div class="card-header py-3 d-flex justify-content-between align-items-center">
        <h6 class="m-0 font-weight-bold text-primary">Haber Listesi</h6>
        <a asp-controller="Admin" asp-action="Index" class="btn btn-sm btn-secondary float-right">
            <i class="fas fa-arrow-left"></i> Panele Dön
        </a>
        <a asp-action="Create" class="btn btn-primary btn-sm">
            <i class="fas fa-plus"></i> Yeni Haber Ekle
        </a>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Görsel</th>
                        <th>Başlık</th>
                        <th>Kategori</th>
                        <th>Yazar</th>
                        <th>Durum</th>
                        <th>Tarih</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="@(item.IsActive ? "" : "bg-light text-muted")">
                            <td>
                                @if (!string.IsNullOrEmpty(item.ImagePath))
                                {
                                    <img src="@item.ImagePath" width="80" style="border-radius: 5px; opacity: @(item.IsActive ? "1" : "0.5")" />
                                }
                            </td>
                            <td>@item.Title</td>
                            <td>
                                <span class="badge badge-secondary">@(item.Category != null ? item.Category.Name : "-")</span>
                            </td>
                            <td>@(item.User != null ? item.User.FullName : "-")</td>

                            <td>
                                @if (item.IsActive)
                                {
                                    <span class="badge badge-success">Yayında</span>
                                }
                                else
                                {
                                    <span class="badge badge-danger">Pasif (Askıda)</span>
                                }
                            </td>

                            <td>@item.PublishedDate.ToString("dd.MM.yyyy")</td>
                            <td>
                                @if (item.IsActive)
                                {
                                    <a asp-action="ToggleStatus" asp-route-id="@item.Id" class="btn btn-secondary btn-sm" title="Yayından Kaldır">
                                        <i class="fas fa-eye-slash"></i>
                                    </a>
                                }
                                else
                                {
                                    <a asp-action="ToggleStatus" asp-route-id="@item.Id" class="btn btn-success btn-sm" title="Yayına Al">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                }

                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm"><i class="fas fa-edit"></i></a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm" onclick="return confirm('Tamamen silmek istiyor musunuz?')"><i class="fas fa-trash"></i></a>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm"><i class="fas fa-info-circle"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            @if (!Model.Any())
            {
                <div class="alert alert-warning text-center">
                    Henüz hiç haber eklenmemiş.
                </div>
            }
        </div>
    </div>
</div>
