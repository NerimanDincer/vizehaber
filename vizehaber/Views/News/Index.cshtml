@model IEnumerable<vizehaber.Models.News>

@{
    ViewData["Title"] = "Haber Listesi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card shadow mb-4">
    <div class="card-header py-3 d-flex justify-content-between align-items-center">
        <h6 class="m-0 font-weight-bold text-primary">Haber Listesi</h6>
        <a asp-action="Create" class="btn btn-primary btn-sm">
            <i class="fas fa-plus"></i> Yeni Haber Ekle
        </a>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Görsel</th>
                        <th>Başlık</th>
                        <th>Kategori</th>
                        <th>Yazar</th>
                        <th>Tarih</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @if (!string.IsNullOrEmpty(item.ImagePath))
                                {
                                    <img src="@item.ImagePath" width="100" height="60" style="object-fit:cover; border-radius:5px;" />
                                }
                                else
                                {
                                    <span>Resim Yok</span>
                                }
                            </td>
                            <td>@item.Title</td>
                            <td>
                                <span class="badge badge-info">
                                    @(item.Category != null ? item.Category.Name : "Kategorisiz")
                                </span>
                            </td>
                            <td>
                                @(item.User != null ? item.User.FullName : "Bilinmiyor")
                            </td>
                            <td>@item.PublishedDate.ToString("dd.MM.yyyy HH:mm")</td>
                            <td>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm"
                                   onclick="return confirm('Bu haberi silmek istediğinize emin misiniz?');">
                                    <i class="fas fa-trash"></i> Sil
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            @if (!Model.Any())
            {
                <div class="alert alert-warning text-center">
                    Henüz hiç haber eklenmemiş.
                </div>
            }
        </div>
    </div>
</div>
